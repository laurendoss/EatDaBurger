<h1>Let's Eat Burgers!</h1>

<h2>Burgers You Need to Eat!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers You have Eaten!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yes<br>
    <input type="radio" name="devoured" value="0"> No
  </div>

  <button type="submit">Add a Burger</button>
</form>

